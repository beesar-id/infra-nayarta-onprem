# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for shell scripts on all platforms
*.sh text eol=lf

# Force LF for Docker related files
Dockerfile* text eol=lf
docker-compose*.yml text eol=lf
*.dockerfile text eol=lf

# Force LF for configuration files (critical for PostgreSQL, etc.)
*.conf text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.json text eol=lf
*.env text eol=lf
*.env.* text eol=lf

# Force LF for SQL files
*.sql text eol=lf

# Force LF for script files
*.py text eol=lf
*.js text eol=lf
*.ts text eol=lf

# Binary files
*.dump binary
*.mp4 binary
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.pdf binary
